---
const backend = [
  { name: "C++", icon: "/icons/C++.svg" },
  { name: "Vite", icon: "/icons/Vite.svg" },
  { name: "TypeScript", icon: "/icons/TS.svg" },
  { name: "Python", icon: "/icons/Python.svg" },
];

const frontend = [
  { name: "React", icon: "/icons/React.svg" },
  { name: "JavaScript", icon: "/icons/JS.svg" },
  { name: "TailwindCSS", icon: "/icons/Tailwind.svg" },
  { name: "CSS", icon: "/icons/CSS.svg" },
  { name: "Astro", icon: "/icons/Astro.svg" },
  { name: "HTML", icon: "/icons/HTML.svg" },
];

const tools = [
  { name: "VS Code", icon: "/icons/VSCode.svg" },
  { 
    name: "GitHub", 
    icon: "/icons/GitHub.svg", // Dark mode icon
    lightIcon: "/icons/GitHub-light.svg" // Light mode icon (add this)
  },
  { name: "NPM", icon: "/icons/NPM.svg" },
  { name: "Figma", icon: "/icons/Figma.svg" },
];
---

<section class="technologies">
  <h2>Technologies</h2>
  <p class="technologies-description">
    These are the technologies I have worked with and am currently learning.
  </p>

  <div class="tech-group">
    <h3>Back-End</h3>
    <div class="tech-grid">
      {backend.map(({ name, icon }) => (
        <div class="tech-card">
          <img src={icon} alt={name} />
          <span>{name}</span>
        </div>
      ))}
    </div>
  </div>

  <div class="tech-group">
    <h3>Front-End</h3>
    <div class="tech-grid">
      {frontend.map(({ name, icon }) => (
        <div class="tech-card">
          <img src={icon} alt={name} />
          <span>{name}</span>
        </div>
      ))}
    </div>
  </div>

  <div class="tech-group">
  <h3>Tools</h3>
  <div class="tech-grid">
    {tools.map(({ name, icon, lightIcon }) => (
      <div class="tech-card">
        {lightIcon ? (
          <>
            <img src={icon} alt={name} class="dark-mode-icon" />
            <img src={lightIcon} alt={name} class="light-mode-icon" />
          </>
        ) : (
          <img src={icon} alt={name} />
        )}
        <span>{name}</span>
      </div>
    ))}
  </div>
</div>
</section>